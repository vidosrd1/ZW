<h2 class="dark:text-slate-400 font-bold text-2xl">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
<br><br>
  <%= render "devise/shared/error_messages", resource: resource %>
  <br>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.email_field :email,
    class: "py-2 px-4 rounded border ring-0
    focus:ring-4 focus:ring-orange-100 focus:shadow-none
    1dark:text-slate-800 focus:border-orange-500 focus:outline-none",
    autofocus: true, autocomplete: "email" %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "Send me reset password instructions" %>
  </div>
  <br><br>
<% end %>
<div class="dark:text-slate-400">
  <%= render "devise/shared/links" %>
</div>
