<h2 class="dark:text-slate-400 font-bold text-2xl">Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
<br><br>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, class: "py-2 px-4 rounded border ring-0
    focus:ring-4 focus:ring-orange-100 focus:shadow-none
    1dark:text-slate-800 focus:border-orange-500 focus:outline-none",
    autofocus: true, autocomplete: "email" %>
  </div>
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>
  <br>
  <div class="field">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, class: "py-2 px-4 rounded border ring-0
    focus:ring-4 focus:ring-orange-100 focus:shadow-none
    1dark:text-slate-800 focus:border-orange-500 focus:outline-none",
    autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br>
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>
  <br>
  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation,
    class: "py-2 px-4 rounded border ring-0
    focus:ring-4 focus:ring-orange-100 focus:shadow-none
    1dark:text-slate-800 focus:border-orange-500 focus:outline-none",
    autocomplete: "new-password" %>
  </div>
  <br>
  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password,
    class: "py-2 px-4 rounded border ring-0
    focus:ring-4 focus:ring-orange-100 focus:shadow-none
    1dark:text-slate-800 focus:border-orange-500 focus:outline-none",
    autocomplete: "current-password" %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "Update",
    class:"dark:text-slate-500
    1font-bold text-2xl" %>
  </div>
  <br><br />
<% end %>
<br><br><br>
<h3>Cancel my account</h3>
<br><br><br>
<div>Unhappy? <%= button_to "Cancel my account",
  registration_path(resource_name),
  data: { confirm: "Are you sure?",
  turbo_confirm: "Are you sure?" },
  method: :delete %>
</div>
<br><br><br>
<div>
  <%= link_to "Back", :back %>
</div>
