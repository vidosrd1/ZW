<h2 class="dark:text-slate-400 font-bold text-2xl">Log in</h2>

<%= form_for(resource, as: resource_name,
url: session_path(resource_name)) do |f| %>
<br><br><br>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.email_field :email,
    class: "py-2 px-4 rounded border ring-0
    focus:ring-4 focus:ring-orange-100 focus:shadow-none
    1dark:text-slate-800 focus:border-orange-500 focus:outline-none",
    autofocus: true, autocomplete: "email" %>
  </div>
  <br>
  <div class="field">
    <%= f.label :password %><br>
    <%= f.password_field :password,
    class: "py-2 px-4 rounded border ring-0
    focus:ring-4 focus:ring-orange-100 focus:shadow-none
    1dark:text-slate-800 focus:border-orange-500 focus:outline-none",
    autocomplete: "current-password" %>
  </div>
  <br>
  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>
  <br>
  <div class="actionsdark:text-slate-500
  font-bold text-2xl">
    <%= f.submit "Log in" %>
  </div>
  <br><br>
<% end %>
<div class="dark:text-slate-400">
  <%= render "devise/shared/links" %>
</div>
